{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["es5", "es6", "dom"],
        "module": "es6",
        "moduleResolution": "node",
        "outDir": "./bundle/",
        "strict": true,
        "downlevelIteration": true,
        "typeRoots": [
            "./custom_typings"
        ],
        "plugins": [
			{
                "name": "typescript-plugin-css-modules",
                "options": {
                    "classnameTransform": "asIs",
                    "customMatcher": ".m.css$",
                }
			}
		]
    }
}